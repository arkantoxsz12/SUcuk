<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sucuk.sucuk" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RestaurantActivity" />
        <activity android:name=".CustomerActivity" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".CustomerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sucuk.sucuk.CustomerActivity" />
        </activity>
        <activity
            android:name=".BasketActivity"
            android:label="@string/title_activity_basket"
            android:parentActivityName=".MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sucuk.sucuk.MenuActivity" />
        </activity>

        <provider
            android:authorities="com.sucuk.suck.orderprovider"
            android:name=".OrderProvider"
            android:exported="false"/>

    </application>

</manifest>

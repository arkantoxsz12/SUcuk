<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/orderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:singleLine="true"
        android:text="Order #"
        android:textColor="@color/colorMenuItem"

        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/orderPrice"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:layout_below="@+id/orderNumber"
        android:layout_alignLeft="@+id/orderNumber"
        android:layout_alignStart="@+id/orderNumber"
        android:layout_toLeftOf="@+id/add"
        android:layout_toStartOf="@+id/add" />

    <at.markushi.ui.CircleButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cb_color="@color/colorAdd"
        app:cb_pressedRingWidth="5dp"
        android:src="@drawable/ic_action_ic_arrow_right_bold_black_24dp"
        android:id="@+id/add"
        android:layout_alignTop="@+id/image"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
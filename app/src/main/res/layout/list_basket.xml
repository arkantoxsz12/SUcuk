<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4dp">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:text="1"
    android:textColor="@color/colorMenuItem"
    android:id="@+id/tvNumber"
    android:textSize="30dp" />
    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Dummy Menu"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dummy Note"
        android:id="@+id/tvPrice"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@+id/tvMenu"
        android:layout_alignLeft="@+id/tvMenu"
        android:layout_alignStart="@+id/tvMenu"
        android:layout_alignRight="@+id/tvMenu"
        android:layout_alignEnd="@+id/tvMenu" />

</RelativeLayout>



